# HAPTOS Package Manifest

# Include documentation
include README.md
include LICENSE
include PHASE1_COMPLETE.md
include PHASE2_COMPLETE.md
include PROJECT_STATUS.md

# Include firmware
recursive-include firmware *.ino *.h *.md

# Include model checkpoints
recursive-include models *.pt

# Include examples
recursive-include examples *.py *.md

# Include configuration files
recursive-include config *.json *.yaml

# Exclude development files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
global-exclude *.dylib

# Exclude test files from package
prune tests
prune .github
prune logs
prune data
